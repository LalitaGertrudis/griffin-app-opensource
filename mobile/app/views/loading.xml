								 autoStart="true"
								 width="turbo.WIDTH_60"
								 top="0"
								 backgroundColor="transparent" />

		</blur-view>

		<animation-view id="lottie"
							 platform="android"
							 module="@titanium/lottie"
							 file="/animations/lottie-rocket2.json"
							 loop="true"
							 autoStart="true"
							 width="turbo.WIDTH_60"
							 top="0"
							 backgroundColor="transparent" />


	</window>
</alloy>