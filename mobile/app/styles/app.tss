	"backgroundColor": turbo.colors.background,
	"layout": "vertical",
	"height": Ti.UI.FILL,
	"extendSafeArea": true,
},

"Window[platform=android]": {
	"onAndroidback": "turbo.noop",
	"titleColor": turbo.colors.primary_active,
}

"Window[platform=ios]": {
	"largeTitleEnabled": true,
	"largeTitleDisplayMode": Ti.UI.iOS.LARGE_TITLE_DISPLAY_MODE_ALWAYS,
