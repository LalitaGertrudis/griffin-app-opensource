
"Picker": {
	"backgroundColor": turbo.colors.background // fix for Android being different defaults than iOS.
}

"Label": {
	"color": turbo.colors.text,
	"font": {
		"fontSize": 17,
		"fontFamily": "SFProDisplay-Normal"
	},
	"includeFontPadding": false,
	
},

"Icon": {
	"color": turbo.colors.text,
},

"TabGroup[platform=android]": {
	"style": Titanium.UI.Android.TABS_STYLE_BOTTOM_NAVIGATION,
